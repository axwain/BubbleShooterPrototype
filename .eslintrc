{
  "env": {
    "jest/globals": true
  },
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "standard-with-typescript",
    "plugin:jest/recommended"
  ],
  "rules": {
    "semi": ["error", "never"],
    "quotes": [2, "single"]
  }
}
