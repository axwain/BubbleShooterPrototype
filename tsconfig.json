{
  "compilerOptions": {
      "allowJs": true,
      "lib": [
        "es2017",
        "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./lib/",
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "es5",
      "types": [
          "jest"
      ],
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "include": [
      "src/**/*.ts",
      "node_modules/@types"
  ],
  "exclude": [
      ".git",
      "node_modules"
  ]
}
